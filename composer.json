{
	"name": "duon/wire",
	"description": "Autowiring object creator and argument resolver",
	"type": "library",
	"keywords": [
		"autowire",
		"autowiring",
		"factory",
		"ioc"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Thomas Ernst",
			"email": "duon@ebenefuenf.de"
		}
	],
	"homepage": "https://duon.run/wire",
	"autoload": {
		"psr-4": {
			"Duon\\Wire\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Duon\\Wire\\Tests\\": "tests"
		}
	},
	"require": {
		"php": "^8.5",
		"psr/container": "^2.0"
	},
	"require-dev": {
		"duon/dev": "^2.5"
	},
	"scripts": {
		"test": "./vendor/bin/phpunit --testdox --no-coverage --colors=always",
		"docstest": "./vendor/bin/docs-test-runner ./docs/code",
		"types": "./vendor/bin/psalm --no-cache",
		"mdlint": "markdownlint-cli2 README.md CHANGELOG.md LICENSE.md docs/",
		"coverage": [
			"./vendor/bin/phpunit --testdox --path-coverage --coverage-text --coverage-php=coverage/cover.php --colors=always",
			"./vendor/bin/coverlyzer coverage/cover.php"
		],
		"ci": [
			"composer doctest",
			"composer coverage",
			"composer types",
			"composer mdlint"
		]
	}
}
